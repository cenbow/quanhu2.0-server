<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
    namespace="com.yryz.quanhu.support.sysconfig.dao.ConfigPersistenceDao">
    <resultMap id="BaseResultMap"
        type="com.yryz.quanhu.support.sysconfig.entity.Config">
        <id column="ID" property="id" jdbcType="INTEGER" />
        <result column="config_id" property="configId" jdbcType="VARCHAR" />
        <result column="config_type" property="configType" jdbcType="VARCHAR" />
        <result column="config_name" property="configName" jdbcType="VARCHAR" />
        <result column="config_value" property="configValue" jdbcType="VARCHAR" />
        <result column="operation_name" property="operationName"
            jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP" />
        <result column="config_desc" property="configDesc" jdbcType="VARCHAR"/>
    </resultMap>
    
    <sql id="Base_Column_List">
        ID, config_id, config_type, config_name, config_value, operation_name,
        create_date,
        update_date,config_desc
    </sql>
    
    <select id="listAllAppId" resultType="java.lang.String">
        select config_value from qh_sys_config where config_name = 'appId' group by config_value
    </select>
    
    <select id="countConfigType" resultType="java.lang.Integer">
        select
        count(DISTINCT(config_type))
        from qh_sys_config
    </select>

    <select id="getByIndex" resultType="java.lang.String">
        select
        config_type
        from qh_sys_config
        group by config_type
        order by config_type desc
        limit #{start},1
    </select>

    <select id="getIdByConfigTypeConfigName" resultType="java.lang.String">
        select
        config_id
        from qh_sys_config where config_type = #{configType} and config_name =
        #{configName}
    </select>

    <select id="getByConfigType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from qh_sys_config
        where config_type = #{configType}
    </select>

    <select id="get" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from qh_sys_config
        where config_id = #{configId}
    </select>
    
    <delete id="delete">
    	delete from qh_sys_config
        where config_type = #{configType}
    </delete>
    
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into qh_sys_config (config_id, config_type,
        config_name, config_value, operation_name,
        create_date, update_date,config_desc)
        values (#{configId}, #{configType},
        #{configName}, #{configValue}, #{operationName},
        #{createDate}, #{updateDate},#{configDesc})
    </insert>

    <update id="update">
        update qh_sys_config
        <set>
            <if test="configType != null">
                config_type = #{configType},
            </if>
            <if test="configName != null">
                config_name = #{configName},
            </if>
            <if test="configValue != null">
                config_value = #{configValue},
            </if>
            <if test="operationName != null">
                operation_name = #{operationName},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
            <if test="configDesc != null ">
            	config_desc = #{configDesc},
            </if>
        </set>
        where config_id = #{configId}
    </update>

</mapper>