	<!-- 更新用户投票卷的使用数量 -->
	<update id="updateUserRoll">
		update qh_activity_user_prizes set
		can_num = can_num -1
		where prizes_type = 1
		and create_user_id = #{createUserId, jdbcType=BIGINT}
		<![CDATA[
			and can_num > 0
			and begin_time <= now()
			and end_time >= now()
  		]]>
		order by end_time asc limit 1
	</update>

