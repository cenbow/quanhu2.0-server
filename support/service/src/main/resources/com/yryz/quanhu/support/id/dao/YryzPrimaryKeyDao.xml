<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yryz.quanhu.support.id.dao.YryzPrimaryKeyDao">

	<!--BaseResultMap-->
	<resultMap id="BaseResultMap" type="com.yryz.quanhu.support.id.entity.PrimaryKey">
		<result column="id" property="id" jdbcType="BIGINT"/>
		<result column="primary_name" property="primaryName" jdbcType="VARCHAR"/>
		<result column="current_value" property="currentValue" jdbcType="BIGINT"/>
		<result column="step" property="step" jdbcType="INTEGER"/>
	</resultMap>

	<!--Base_Column_List-->
	<sql id="Base_Column_List">id,primary_name,current_value,step
    </sql>

	<select id="getPrimaryKey" resultMap="BaseResultMap">
		SELECT <include refid="Base_Column_List"/>
		FROM quanhu_code
		WHERE primary_name = #{type}
	</select>

	<update id="updatePrimaryKey">
		UPDATE quanhu_code
		SET current_value = #{currentValue} + #{step}
		WHERE primary_name =
		#{primaryName}
		and current_value = #{currentValue}
	</update>


	<insert id="insertPrimaryKey" parameterType="com.yryz.quanhu.support.id.entity.PrimaryKey">
		insert into quanhu_code (
		`primary_name`,
		`current_value`,
		`step`
		)
		values (
		#{primaryName,jdbcType=VARCHAR},
		#{currentValue,jdbcType=BIGINT},
		#{step,jdbcType=INTEGER}
		)
	</insert>

</mapper>