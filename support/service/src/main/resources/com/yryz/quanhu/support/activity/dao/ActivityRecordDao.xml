<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yryz.quanhu.support.activity.dao.ActivityRecordDao">

	<!--Base_Column_List-->
	<sql id="Base_Column_List">id,kid,activity_info_id,phone,sign_up_type,amount,enrol_sources,create_date,create_user_id,last_update_date,last_update_user_id
    </sql>

     <!-- 查询ActivityRecord详情 -->
    <select id="selectByKid" resultType="com.yryz.quanhu.support.activity.vo.ActivityRecordVo" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from qh_activity_record
        where kid = #{kid,jdbcType=BIGINT}
    </select>
    
    <!-- 删除ActivityRecord-->
    <delete id="delete" parameterType="java.lang.Long">
   	 	delete from qh_activity_record
    	where kid = #{kid,jdbcType=BIGINT}
    </delete>
  
  	<!-- 新增ActivityRecord-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="com.yryz.quanhu.support.activity.entity.ActivityRecord">
	    insert into qh_activity_record (kid,activity_info_id,phone,sign_up_type,amount,enrol_sources,create_user_id,last_update_user_id)
	    values (
	    	#{kid,jdbcType=BIGINT}
				,#{activityInfoId,jdbcType=BIGINT}
				,#{phone,jdbcType=VARCHAR}
				,#{signUpType,jdbcType=TINYINT}
				,#{amount,jdbcType=INTEGER}
				,#{enrolSources,jdbcType=VARCHAR}
				,#{createUserId,jdbcType=BIGINT}
				,#{lastUpdateUserId,jdbcType=BIGINT}
	    )
	</insert>
	
	<!--按需新增ActivityRecord-->
    <insert id="insertByPrimaryKeySelective" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="com.yryz.quanhu.support.activity.entity.ActivityRecord">
	    insert into qh_activity_record
	    <trim prefix="(" suffix=")" suffixOverrides=",">
			kid,
        <if test="activityInfoId != null">
			activity_info_id,
	    </if>
        <if test="phone != null and phone != ''">
			phone,
	    </if>
        <if test="signUpType != null">
			sign_up_type,
	    </if>
        <if test="amount != null">
			amount,
	    </if>
        <if test="enrolSources != null and enrolSources != ''">
			enrol_sources,
	    </if>
        <if test="createUserId != null">
			create_user_id,
	    </if>
        <if test="lastUpdateUserId != null">
			last_update_user_id,
	    </if>
	    </trim>
	    <trim prefix="values (" suffix=")" suffixOverrides=",">
			#{kid,jdbcType=BIGINT},
        <if test="activityInfoId != null">
			#{activityInfoId,jdbcType=BIGINT},
	    </if>
        <if test="phone != null and phone != ''">
			#{phone,jdbcType=VARCHAR},
	    </if>
        <if test="signUpType != null">
			#{signUpType,jdbcType=TINYINT},
	    </if>
        <if test="amount != null">
			#{amount,jdbcType=INTEGER},
	    </if>
        <if test="enrolSources != null and enrolSources != ''">
			#{enrolSources,jdbcType=VARCHAR},
	    </if>
        <if test="createUserId != null">
			#{createUserId,jdbcType=BIGINT},
	    </if>
        <if test="lastUpdateUserId != null">
			#{lastUpdateUserId,jdbcType=BIGINT},
	    </if>
	    </trim>
	</insert>
	
	
	<!-- 按需修改ActivityRecord-->   
    <update id="update" parameterType="com.yryz.quanhu.support.activity.entity.ActivityRecord">
        update qh_activity_record
        <set>
             <if test="activityInfoId != null">
    			activity_info_id = #{activityInfoId,jdbcType=BIGINT},
    		</if>
            <if test="phone != null and phone != ''">
    			phone = #{phone,jdbcType=VARCHAR},
    		</if>
             <if test="signUpType != null">
    			sign_up_type = #{signUpType,jdbcType=TINYINT},
    		</if>
             <if test="amount != null">
    			amount = #{amount,jdbcType=INTEGER},
    		</if>
            <if test="enrolSources != null and enrolSources != ''">
    			enrol_sources = #{enrolSources,jdbcType=VARCHAR},
    		</if>
             <if test="createUserId != null">
    			create_user_id = #{createUserId,jdbcType=BIGINT},
    		</if>
             <if test="lastUpdateUserId != null">
    			last_update_user_id = #{lastUpdateUserId,jdbcType=BIGINT},
    		</if>
        </set>
        where kid = #{kid,jdbcType=BIGINT}
    </update>

	<!-- 当前用户在当前活动中的报名状态(1未参加    2已参加) -->
	<select id="getEnrolStatusByCustId" resultType="com.yryz.quanhu.support.activity.entity.ActivityRecord">
		select
		<include refid="Base_Column_List" />
		from qh_activity_record
		where create_user_id = #{custId,jdbcType=BIGINT} and activity_info_id = #{activityId,jdbcType=BIGINT}
	</select>


	<select id="selectByPrimaryKey" resultType="com.yryz.quanhu.support.activity.entity.ActivityRecord" parameterType="java.lang.Long" >
		select
		<include refid="Base_Column_List" />
		from qh_activity_record
		where kid = #{kid,jdbcType=BIGINT}
	</select>

	<!-- (后台)报名类活动 -->
	<select id="attendlist" parameterType="com.yryz.quanhu.support.activity.vo.AdminActivityRecordVo"
			resultType="com.yryz.quanhu.support.activity.vo.AdminActivityRecordVo">
		select
		<include refid="Base_Column_List" />
		from qh_activity_record
		where activity_info_id = #{activityRecordVo.activityInfoId,jdbcType=BIGINT}
		order by create_date desc
	</select>
	<select id="attendlistCount" parameterType="com.yryz.quanhu.support.activity.vo.AdminActivityRecordVo"
			resultType="java.lang.Long">
		select
		count(1)
		from qh_activity_record
		where activity_info_id = #{activityRecordVo.activityInfoId,jdbcType=BIGINT}
	</select>
</mapper>