<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yryz.quanhu.dymaic.dao.DymaicDao">

    <!-- ？？？？ userId 为Number类型 -->
    <resultMap id="BaseResultMap" type="com.yryz.quanhu.dymaic.vo.Dymaic">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="kid" property="kid" jdbcType="BIGINT"/>
        <result column="create_user_id" property="userId" jdbcType="BIGINT"/>
        <result column="module_enum" property="moduleEnum" jdbcType="TINYINT"/>
        <result column="target_id" property="resourceId" jdbcType="VARCHAR"/>
        <result column="classify_id" property="classifyId;" jdbcType="BIGINT"/>
        <result column="coterie_id" property="coterieId;" jdbcType="VARCHAR"/>

        <result column="transmit_note" property="transmitNote" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="cover_plan_url" property="coverPlanUrl" jdbcType="VARCHAR"/>
        <result column="img_url" property="imgUrl" jdbcType="VARCHAR"/>
        <result column="video_url" property="videoUrl" jdbcType="VARCHAR"/>
        <result column="video_thumbnail_url" property="videoThumbnailUrl" jdbcType="VARCHAR"/>
        <result column="audio_url" property="audioUrl" jdbcType="VARCHAR"/>
        <result column="release_note" property="releaseNote" jdbcType="VARCHAR"/>

        <result column="del_flag" property="delFlag" jdbcType="TINYINT"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
    </resultMap>


    <sql id="Base_Column_List">
        kid, create_user_id, module_enum, target_id, classify_id, coterie_id,
        transmit_note, title, content, cover_plan_url, img_url, video_url, video_thumbnail_url,
        audio_url, release_note, del_flag, create_date
    </sql>

    <!-- 查询动态信息 -->
    <select id="get" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from qh_dymaic
        where kid = #{kid,jdbcType=BIGINT}
    </select>

    <select id="getByids" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from qh_dymaic
        WHERE kid IN
        <foreach item="item" index="index" collection="list" open="("
                 separator="," close=")">
            #{item}
        </foreach>
    </select>

    <update id="update" parameterType="com.yryz.quanhu.dymaic.vo.Dymaic">
        update qh_dymaic
        <set>
            <if test="delFlag != null">
                del_flag = #{delFlag,jdbcType=TINYINT},
            </if>
        </set>
        where kid = #{kid,jdbcType=BIGINT}
    </update>

    <delete id="delete">
        delete from qh_dymaic
        where kid = #{kid,jdbcType=BIGINT}
    </delete>

    <!-- 查询个人动态id -->
    <select id="getSendListIds" resultType="java.lang.Long">
        SELECT kid
        from qh_dymaic
        WHERE create_user_id = #{userId,jdbcType=VARCHAR}
        AND del_flag = 10
    </select>

    <!-- 查询好友动态id -->
    <select id="getTimeLineIds" resultType="java.lang.Long">
        SELECT kid
        from qh_dymaic
        WHERE create_user_id IN
        <foreach item="item" index="index" collection="userIds" open="("
                 separator="," close=")">
            #{item}
        </foreach>
        AND del_flag = 10
        LIMIT #{limit}
    </select>

    <insert id="insert" parameterType="com.yryz.quanhu.dymaic.vo.Dymaic">
        insert into qh_dymaic (kid, create_user_id, module_enum, target_id, classify_id, coterie_id,
          transmit_note, title, content, cover_plan_url, img_url, video_url, video_thumbnail_url, audio_url, release_note)
        values (#{kid,jdbcType=BIGINT},#{userId,jdbcType=BIGINT},
            #{moduleEnum,jdbcType=TINYINT},#{resourceId,jdbcType=VARCHAR},
            #{classifyId,jdbcType=BIGINT},#{coterieId,jdbcType=VARCHAR},
            #{transmitNote,jdbcType=VARCHAR},#{title,jdbcType=VARCHAR},
            #{content,jdbcType=VARCHAR},#{coverPlanUrl,jdbcType=VARCHAR},
            #{imgUrl,jdbcType=VARCHAR},#{videoUrl,jdbcType=VARCHAR},
            #{videoThumbnailUrl,jdbcType=VARCHAR},#{audioUrl,jdbcType=VARCHAR},
            #{releaseNote,jdbcType=VARCHAR})
    </insert>

</mapper>