<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yryz.quanhu.demo.dao.ContentAuditDao">
    <resultMap id="BaseResultMap" type="com.yryz.quanhu.demo.entity.ContentAudit">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="TINYINT"/>
        <result column="operational" property="operational" jdbcType="VARCHAR"/>
        <result column="action_type" property="actionType" jdbcType="TINYINT"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="info_id" property="infoId" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, type, operational, action_type, remark, create_time, info_id
    </sql>

    <select id="findByTypeAndInfoId" resultMap="BaseResultMap" parameterType="java.util.HashMap">
        select
        <include refid="Base_Column_List"/>
        from content_audit
        where 1=1
        <if test="infoId != null and infoId != ''">
            and info_id = #{infoId}
        </if>
        <if test="type != null ">
            and type = #{type}
        </if>
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from content_audit
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <insert id="save" parameterType="com.yryz.quanhu.demo.entity.ContentAudit">
        insert into content_audit (id, type, operational,
        action_type, remark, create_time,
        info_id)
        values (#{id,jdbcType=INTEGER}, #{type,jdbcType=TINYINT}, #{operational,jdbcType=VARCHAR},
        #{actionType,jdbcType=TINYINT}, #{remark,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP},
        #{infoId,jdbcType=VARCHAR})
    </insert>
</mapper>