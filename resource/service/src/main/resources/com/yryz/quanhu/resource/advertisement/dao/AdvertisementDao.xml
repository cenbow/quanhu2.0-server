        select
        <include refid="Base_Column_List"/>
        from qh_adv
        <where>
            <![CDATA[   start_date <= #{checkStartDate} ]]>
            <![CDATA[  AND end_date > #{checkStartDate} ]]>
            <![CDATA[  AND start_time <= #{checkStartTime} ]]>
            <![CDATA[  AND end_time > #{checkStartTime} ]]>
            AND adv_status != 30
        </where>
    </select>

