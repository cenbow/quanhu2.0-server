			<if test="kid != null">
				kid,
			</if>
			<if test="appId != null">
				app_id,
			</if>
			<if test="userPhone != null">
				user_phone,
			</if>
			<if test="userEmail != null">
				user_email,
			</if>
			<if test="userPwd != null">
				user_pwd,
			</if>
			<if test="delFlag != null">
				del_flag,
			</if>
			<if test="createDate != null">
				create_date,
			</if>
			<if test="lastUpdateDate != null">
				last_update_date,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=BIGINT},
			</if>
			<if test="kid != null">
				#{kid,jdbcType=BIGINT},
			</if>
			<if test="appId != null">
				#{appId,jdbcType=VARCHAR},
